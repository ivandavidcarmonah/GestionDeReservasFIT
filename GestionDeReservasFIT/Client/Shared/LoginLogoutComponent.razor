@inject NavigationManager NavigationManager
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
@inject ILocalStorageService LocalStrorage


<AuthorizeView>

    <Authorized>
        <button @onclick="Logout" class="btn btn-outline-danger">Logout</button>
    </Authorized>

    <NotAuthorized>
        <button @onclick="Login" class="btn btn-outline-warning">Login</button>
    </NotAuthorized>

</AuthorizeView>



@code {
    void Login()
    {
        NavigationManager.NavigateTo("login");
    }

    async void Logout()
    {
        await LocalStrorage.RemoveItemAsync("token");
        await AuthStateProvider.GetAuthenticationStateAsync();
    }
}
